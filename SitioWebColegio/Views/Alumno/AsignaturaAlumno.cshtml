@model IEnumerable<SitioWebColegio.Models.AsignaturaAlumno>
@{ 
    ViewBag.Title = "Asignatura Alumno";
    Layout = "~/Views/Shared/LayoutAdministrador.cshtml";
  }

<h4 class="text-center">Asignaturas Alumnos</h4>
<a class="btn btn-success" href="@Url.Content("~/Alumno/AsignaturaNuevoAlumno")">Nuevo</a>

<h2>

    <a style="float: right; color: blue; font-size:35px; margin-bottom: 25px;" href="@Url.Content("~/Alumno/TodosAlumnosAdmin")"><i style="font-size: 30px;" class="fas fa-arrow-alt-circle-left"></i></a>


</h2>

<style>
    .fas {
        font-size: 18px;
    }

    .dataTables_filter {
        float: left !important;
    }
</style>

@if (ViewBag.mensajeEliminar != null)
{
    <div class="alert alert-danger text-center" style="height: 65px;" role="alert">
        <p>@ViewBag.mensajeEliminar</p>
    </div>
}

    <table class="table table-bordered table-hover w-100" id="datatable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Alumno.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asignatura.nombre)
            </th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Alumno.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Asignatura.nombre)
                </td>
                <td>
                    <a class='btn btn-warning' href='@Url.Content("~/Alumno/AsignaturaEditarAlumno?Id=") + @item.Id ' )><i class='fa fa-pencil'></i> Editar</a>
                    <a class='btn btn-danger' style='margin-left:5px' onclick='return jsEliminar();' href='@Url.Content("~/Alumno/AsignaturaEliminarAlumno?Id=") + @item.Id  ' )><i class='fa fa-trash'></i> Eliminar</a>
                </td>
            </tr>
        }

    </table>

<script>
    function jsEliminar() {
        return confirm("Estas Seguro que deseas eliminar este registro?");
    }
</script>
