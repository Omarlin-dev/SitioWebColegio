@model SitioWebColegio.Models.viewModels.profesorViewModel
@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/Shared/LayoutAdministrador.cshtml";

}

<h2>Nuevo</h2>


<div class="text-center justify-content-center" style="max-width: 50%;">
    <form action="@Url.Content("~/Profesor/Nuevo")" method="post" class="form-control">
        <div class="form-control">
            <label for="nombre">Nombre</label>
            @Html.TextBoxFor(d => d.nombre, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.nombre, "", new { @class = "danger" })

        </div>
        <div class="form-control">
            <label for="apellido">Apellido</label>
            @Html.TextBoxFor(d => d.apellido, "", new { @class = "form-control" })
        </div>
        <div class="form-control">
            <label for="nombreusuario">Nombre de Usuario</label>
            @Html.TextBoxFor(d => d.nombreUsuario, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.nombreUsuario, "", new { @class = "danger" })

        </div>
        <div class="form-control">
            <label for="clave">Clave</label>
            <input type="password" name="clave" class="form-control" />
            @Html.ValidationMessageFor(d => d.clave, "", new { @class = "danger" })

        </div>
        <div class="form-control">
            <label for="especialidad">Especialidad</label>
            @Html.TextBoxFor(d => d.especialidad, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.especialidad, "", new { @class = "danger" })

        </div>
        <div class="form-control">
            <label for="estado">Estado</label>
            @Html.EditorFor(d => d.estado, "", new { @class = "form-control" })

        </div>
        <div class="text-end float-end">
            <input type="submit" value="Enviar" class="btn btn-outline-success" />
        </div>
    </form>
</div>
